{
    "manifest_version": 3,
    "name": "JumboMail Player",
    "version": "2.2",
    "description": "תוסף לניגון והורדת קבצים מ-JumboMail.",
    "permissions": [
        "activeTab"
    ],
    "host_permissions": [
        "https://api.jumbomail.me/*",
        "https://www.jumbomail.me/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {}
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.jumbomail.me/l/en/gallery/*"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    }
}